{
  "name": "linkinator-action",
  "version": "2.3.0",
  "description": "A GitHub Action that checks your README and other markdown for 404s.",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "fix": "biome check --write .",
    "lint": "biome check .",
    "build": "esbuild src/index.js --bundle --platform=node --format=esm --outfile=dist/index.js --sourcemap"
  },
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JustinBeckwith/linkinator-action.git"
  },
  "keywords": [
    "404",
    "link",
    "checker"
  ],
  "author": "Justin Beckwith <justin.beckwith@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JustinBeckwith/linkinator-action/issues"
  },
  "homepage": "https://github.com/JustinBeckwith/linkinator-action#readme",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "linkinator": "^7.5.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "esbuild": "^0.27.2",
    "nock": "^14.0.10",
    "vitest": "^4.0.18"
  }
}
